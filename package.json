{
  "name": "kaya-nexus-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "npm run test --workspace=apps/kaya-nexus && npm run test --workspace=packages/design-system",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm --filter kaya-nexus cypress:run",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "dev": "pnpm --filter kaya-nexus dev",
    "start": "pnpm --filter kaya-nexus start",
    "prepare-deploy": "pnpm build && pnpm test:unit"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "firebase": "^11.6.0",
    "firebase-admin": "^13.3.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.14.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-icons": "^4.10.1",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/cypress": "^1.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.11.13",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.1",
    "cypress": "^14.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "overrides": {
    "@eslint/eslintrc": "3.0.0",
    "eslint": "8.57.0",
    "@tailwindcss/postcss": "4.0.0"
  }
}
