{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    "src/components/__tests__/Card.test.tsx",
    "src/components/__tests__/Modal.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
