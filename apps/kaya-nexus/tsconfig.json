{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@kaya/design-system": [
        "../../packages/design-system/src"
      ]
    },
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "next-env.d.ts",
    "jest.setup.ts",
    "src/types/jest-dom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
